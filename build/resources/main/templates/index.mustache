{{>layout/header}}

<div class="col-md-12">
    <h1>My Traveler</h1>
    {{#loginUserName}}
    <div class="col-md-6">
            <a href="/posts/save" role="button"
               class="btn btn-primary">글 등록</a>
        <span id="user"> Welcome!{{loginUserName}}</span>
            <a href="/logout" class="btn btn-info active" role="button">Logout</a>
    </div>
    {{/loginUserName}}

    {{^loginUserName}}
        <div class = "right">
            <a href="/loginForm" class="btn btn-info active" role="button">Login</a>
        </div>
    {{/loginUserName}}
    <br>
    <br>
    <!-- 목록 출력 영역 -->
</div>

<table>
    <thead class="thead-strong">
    <tr height="50">
        <th width="200">게시글번호</th>
        <th width="150">제목</th>
        <th width="150">작성자</th>
        <th width="250">최종수정일</th>
    </tr>
    </thead>
</table>
<br>
<table>
    <tbody id="tbody">
    {{#posts}}
        <tr height="50">
            <td width="200">{{id}}</td>
            <td width="150"><a href="/posts/retrieve/{{id}}">{{title}}</a></td>
            <td width="150"> {{author}}</td>
            <td width="250">{{modifiedDate}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>


{{>layout/footer}}
